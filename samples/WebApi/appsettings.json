{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Throttling": {
    "DefaultPolicy": "Default",
    "KeyResolver": "IP",
    "RateLimitMessage": "Too many requests. Please try again later.",
    "RateLimitStatusCode": 429,
    "IncludeRateLimitHeaders": true,
    "Policies": {
      "Default": {
        "Algorithm": "TokenBucket",
        "MaxRequests": 10,
        "WindowSeconds": 60,
        "Parameters": {
          "Capacity": 10.0,
          "RefillRatePerSecond": 0.17
        },
        "Enabled": true
      },
      "Burst": {
        "Algorithm": "TokenBucket",
        "MaxRequests": 50,
        "WindowSeconds": 60,
        "Parameters": {
          "Capacity": 50.0,
          "RefillRatePerSecond": 0.83
        },
        "Enabled": true
      }
    },
    "Storage": {
      "Type": "Memory",
      "Parameters": {}
    }
  }
}
